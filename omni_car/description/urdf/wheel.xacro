<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
    <xacro:macro name="wheel" params="wheel_name is_right is_front wheel_x_offset wheel_y_offset wheel_z_offset prefix">
        <link name="${prefix}wheel_${wheel_name}">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <mass value="0.3" />
                <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="${-pi/2} 0 0" />
                <geometry>
                    <!-- <xacro:if value="${is_right}"> -->
                    <xacro:if value="${(is_right and is_front) or (not is_right and not is_front)}">

                        <mesh filename="file://$(find omni_car)/meshes/wheel_set2.dae" />
                    </xacro:if>
                    <!-- <xacro:unless value="${is_right}"> -->
                    <xacro:unless value="${(is_right and is_front) or (not is_right and not is_front)}">
                        <mesh filename="file://$(find omni_car)/meshes/wheel_set1.dae" />
                    </xacro:unless>
                </geometry>
                <material name="yellow"/>

            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder radius="0.0001" length="0.0001"/>
                </geometry>
            </collision>
        </link>

        <link name="${prefix}wheel_${wheel_name}_force_transform">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <mass value="0.3" />
                <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder radius="0.0001" length="0.0001"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder radius="0.03" length="0.02"/>
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}wheel_${wheel_name}_joint" type="continuous">
            <parent link="${prefix}frame" />
            <child link="${prefix}wheel_${wheel_name}" />
            <axis xyz="0 0 1" />
            <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="${-pi/2} 0 0"/>
            <limit velocity="15.0" effort="30"/>
        </joint>

        <joint name="${prefix}wheel_${wheel_name}_joint_force_transform" type="continuous">
            <parent link="${prefix}frame"/>
            <child link="${prefix}wheel_${wheel_name}_force_transform"/>
            <xacro:if value="${(is_right and is_front) or (not is_right and not is_front)}">
                <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="${-pi/2} 0 ${pi/4}"/> <!-- 45 deg rotate -->
            </xacro:if>
            <xacro:unless value="${(is_right and is_front) or (not is_right and not is_front)}">
                <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="${-pi/2} 0 ${-pi/4}"/> <!-- -45 deg rotate -->
            </xacro:unless>
            <axis xyz="0 0 1"/>
            <mimic joint="${prefix}wheel_${wheel_name}_joint" multiplier="1.0"/>
        </joint>

        <transmission name="${prefix}${wheel_name}_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${prefix}wheel_${wheel_name}_joint">
                <hardwareInterface>VelocityJointInterface</hardwareInterface>
            </joint>
            <actuator name="${prefix}${wheel_name}_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
    </xacro:macro>
</robot>

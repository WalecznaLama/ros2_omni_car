<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
    <xacro:macro name="wheel" params="wheel_name is_right wheel_x_offset wheel_y_offset wheel_z_offset">
        <link name="wheel_${wheel_name}">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <mass value="0.3" />
                <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <xacro:if value="${is_right}">
                        <mesh filename="file://$(find omni_car_description)/meshes/wheel_r.dae" />
                    </xacro:if>
                    <xacro:unless value="${is_right}">
                        <mesh filename="file://$(find omni_car_description)/meshes/wheel_l.dae" />
                    </xacro:unless>
                </geometry>
                <material name="">
                    <color rgba="0.77 0 1 1" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder radius="0.0" length="0.0"/>
                </geometry>
            </collision>
        </link>

        <link name="wheel_${wheel_name}_force_transform">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <mass value="0.3" />
                <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder radius="0.0" length="0.0"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder radius="0.03" length="0.05"/>
                </geometry>
            </collision>
        </link>

        <joint name="wheel_${wheel_name}_joint" type="continuous">
            <parent link="frame" />
            <child link="wheel_${wheel_name}" />
            <axis xyz="0 0 1" />
            <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="${-pi/2} 0 0"/>
            <limit velocity="15.0" effort="30"/>
        </joint>

        <joint name="wheel_${wheel_name}_joint_force_transform" type="continuous">
            <parent link="frame"/>
            <child link="wheel_${wheel_name}_force_transform"/>
            <xacro:if value="${is_right}">
                <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="${-pi/2} 0 ${pi/4}"/> <!-- 45 deg rotate -->
            </xacro:if>
            <xacro:unless value="${is_right}">
                <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="${-pi/2} 0 ${-pi/4}"/> <!-- 45 deg rotate -->
            </xacro:unless>
            <axis xyz="0 0 1"/>
            <mimic joint="wheel_${wheel_name}_joint" multiplier="1.0"/>
        </joint>

        <transmission name="${wheel_name}_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="wheel_${wheel_name}_joint">
                <hardwareInterface>VelocityJointInterface</hardwareInterface>
            </joint>
            <actuator name="${wheel_name}_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
    </xacro:macro>
</robot>
